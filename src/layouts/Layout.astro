---
import '@styles/main.pcss'
import Navigation from '@components/navigation.astro'
import linkedin from '@imgs/social/linkedin logo.svg'
import github from '@imgs/social/github-mark-white.svg'
import twitter from '@imgs/social/Twitter social icons - circle - white.svg'
import CustomBorderSec from '@components/customBorderSec.astro'
import Logo from '@components/logo.astro'

export interface Props {
	title: string;
}

const { title } = Astro.props;
const menuList = [
	{
		label: 'Home',
		path: '/'
	},
	{
		label: 'About',
		path: '/about'
	},
	{
		label: 'Contact',
		path: '/contact'
	},
	{
		label: 'Blog',
		path: '/blog'
	}
]

const menuList2 = [
	{
		label: 'Privacy',
		path: '/'
	},
	{
		label: 'Contact',
		path: '/contact'
	}
]

const socialList = [
	{
		label: 'linkedin',
		path: import.meta.env.PUBLIC_LINKEDIN,
		img: linkedin
	},
	{
		label: 'github',
		path: import.meta.env.PUBLIC_GITHUB,
		img: github
	},
	{
		label: 'twitter',
		path: import.meta.env.PUBLIC_TWITTER,
		img: twitter
	}
]
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div class="outer">
			<Navigation menuList={menuList} socialList={socialList} />

			<slot />

			{/* Footer */}
			<CustomBorderSec top="wavy" bottom="none" tag="footer">
				<div class="footer_inner">
					<div class="footer_nav_left">
						<div class="footer_nav_logo">
							<a href="/" class="logo_space">
								<Logo name="main" color0="currentColor" width="100" height="18" />
							</a>
						</div>

						{menuList.length ?
							<ul class="nav_list">
								{menuList.map(item => (
									item.label !== 'Contact' ? <li><a href={item.path}>{item.label}</a></li> : ''
								))}
							</ul>
						: ''}

						{menuList2.length ?
							<ul class="nav_list">
								{menuList2.map(item => (
									<li><a href={item.path} target="_blank">{item.label}</a></li>
								))}
							</ul>
						: '' }
					</div>
					<div class="foot_nav_right">
						{socialList.length ?
							<ul class="nav_list social_list">
								{socialList.map(item => (
									<li><a href={item.path} target="_blank"><img src={item.img} alt={item.label}/></a></li>
								))}
							</ul>
						: '' }
					</div>
				</div>
				<div class="footer_copy">
					<p>Copyright Â© 2023 merb.dev Michael Erb All rights reserved</p>
				</div>
			</CustomBorderSec>
		</div>
	</body>
</html>
